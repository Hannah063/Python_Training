[flake8]
    max-line-length = 79
    max-complexity = 10
    extend-ignore = E203
    exclude =
        # No need to traverse our git directory
        .git,
        # There's no value in checking cache directories
        __pycache__,
        # This contains our built documentation
        build,
        # This contains builds of flake8 that we don't want to check
        dist,
        venv,
        *.py[cod],
        *$py.class,
        *.so,
        .Python,
        develop-eggs,
        dist,
        downloads,
        eggs,
        .eggs,
        lib,
        lib64,
        parts,
        sdist,
        var,
        wheels,
        *.egg-info,
        .installed.cfg,
        *.egg
 
#max-line-length: maximum allowed line length
#ignore: errors/warnings to ignore
#exclude: directories to skip